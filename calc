<body>

  <div class="logo"></div>
  <input type="text" id="display" readonly value="0">

  <div class="buttons">
    <button class="clear" onclick="clearAll()">C</button>
    <button onclick="del()">back</button>
    <button onclick="app('/')">÷</button>
    <button onclick="app('*')">×</button>
    <button onclick="app('7')">7</button><button onclick="app('8')">8</button><button onclick="app('9')">9</button><button onclick="app('-')">−</button>
    <button onclick="app('4')">4</button><button onclick="app('5')">5</button><button onclick="app('6')">6</button><button onclick="app('+')">+</button>
    <button onclick="app('1')">1</button><button onclick="app('2')">2</button><button onclick="app('3')">3</button>
    <button class="equals" onclick="calc()">=</button>
    <button class="zero" onclick="app('0')">0</button><button onclick="app('.')">.</button>
  </div>

  <!-- ELFIYERO EASTER EGG -->
  <div id="elfiero" class="secret">
    <h1 style="font-size:3em;color:#ff69b4">Elphaba × Fiyero Forever</h1>
    <p style="font-size:2em;margin:20px">As Long As You're Mine ♡</p>
    <img class="couple-img" src="https://i.ibb.co/7zY6nY4/elfiyero-kiss.jpg" alt="Elphaba and Fiyero">
