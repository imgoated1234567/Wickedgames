      You are one of us. Welcome home.
    </p>
    <button class="enter-btn" onclick="goToGames()">Enter the Gamesite →</button>
  </div>

  <!-- SECOND CODE EASTER EGG -->
  <div id="numbercode" class="secret">
    <h1 style="font-size:3em;color:#ff69b4">Access Granted</h1>
    <p style="font-size:2em;margin:30px">6951815 + 51216121 = 58167936</p>
    <p style="font-size:1.6em;">The math checks out. You may pass.</p>
    <button class="enter-btn" onclick="goToGames()">Enter the Gamesite →</button>
  </div>

<script>
const d = document.getElementById('display');
const elfiero = document.getElementById('elfiero');
const numbercode = document.getElementById('numbercode');

function app(x) { d.value = (d.value==='0') ? x : d.value + x; }
function clearAll() { 
  d.value='0'; 
  elfiero.classList.remove('show');
  numbercode.classList.remove('show');
}
function del() { d.value = d.value.slice(0,-1) || '0'; }

function goToGames() {
  // Change this to your real gamesite folder or URL
  window.location.href = "/games/index.html";   // ← edit this line!
  // Examples:
  // window.location.href = "games.html";
  // window.location.href = "https://yourusername.github.io/your-repo/";
}

function calc() {
  const input = d.value.trim();

  if (input.toLowerCase() === 'elfiero') {
    d.value = "As Long As You're Mine ♡";
    elfiero.classList.add('show');
    return;
  }
  if (input === '695181551216121' || input === '6951815+51216121') {
    d.value = "58167936";
    numbercode.classList.add('show');
    return;
  }

  try { 
    const result = eval(d.value.replace('×','*').replace('÷','/'));
    d.value = result || '0';
  }
  catch { 
    d.value = "I'm melting!";
    setTimeout(clearAll, 1500);
  }
}
</script>
